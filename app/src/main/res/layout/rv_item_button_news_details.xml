<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_left">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/rectangle_button_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ostavi komentar"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_the_smallest"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_weight="3"
            android:layout_margin="@dimen/margin_left"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/plus_icon"
            android:layout_width="@dimen/text_norm"
            android:layout_height="@dimen/text_norm"
            android:src="@drawable/ic_plus_icon"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/all_comments"
            android:layout_width="@dimen/text_norm"
            android:layout_height="@dimen/text_norm"
            android:src="@drawable/ic_comment"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/textViewCountComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_weight="3"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_gravity="center"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>